# Yandex Cloud Environment Variables Template
# Скопируйте этот файл в .env и заполните значения

# Environment
NODE_ENV=production
PORT=4000

# Database - Yandex Managed PostgreSQL
# Формат: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@c-xxxxx.rw.mdb.yandexcloud.net:6432/event_app?sslmode=require

# Redis - Yandex Managed Redis или локальный
# Для Managed Redis: redis://:password@host:port
# Для локального: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# JWT Secrets (сгенерируйте безопасные значения)
JWT_ACCESS_SECRET=your-very-long-and-secure-access-secret-key-here
JWT_REFRESH_SECRET=your-very-long-and-secure-refresh-secret-key-here
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Application URLs
APP_BACKEND_BASE_URL=https://your-domain.ru
APP_FRONTEND_BASE_URL=https://your-domain.ru
APP_URL=https://your-domain.ru
CORS_ORIGIN=https://your-domain.ru

# Yandex Cloud Email API
YANDEX_IAM_TOKEN=your-iam-token-here
YANDEX_CLOUD_FROM_EMAIL=noreply@iventapp.ru
YANDEX_CLOUD_API_ENDPOINT=https://mail-api.cloud.yandex.net

# Email Redirect URLs
EMAIL_VERIFICATION_REDIRECT_URL=https://your-domain.ru/auth/verify-email
PASSWORD_RESET_REDIRECT_URL=https://your-domain.ru/auth/reset-password

# Google OAuth (опционально)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Yandex Object Storage (S3-compatible)
STORAGE_DRIVER=s3
STORAGE_ENDPOINT=https://storage.yandexcloud.net
STORAGE_BUCKET=event-app-media
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_REGION=ru-central1
STORAGE_FORCE_PATH_STYLE=false
STORAGE_PUBLIC_BASE_URL=https://storage.yandexcloud.net/event-app-media
STORAGE_MAX_FILE_SIZE_MB=5

